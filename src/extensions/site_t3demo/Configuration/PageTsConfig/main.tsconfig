@import 'EXT:backendpreviews/Configuration/PageTs/PageTs.tsconfig'

@import 'EXT:site_t3demo/Configuration/PageTsConfig/mod/web_layout/BackendLayouts/*.tsconfig'
@import 'EXT:site_t3demo/Configuration/PageTsConfig/mod/wizards/newContentElement/*.tsconfig'
@import 'EXT:site_t3demo/Configuration/PageTsConfig/mod/web_layout/tt_content/preview/view.tsconfig'
@import 'EXT:site_t3demo/Configuration/PageTsConfig/TCEFORM.tsconfig'

mod {
  wizards.newContentElement.wizardItems {
    common.show = *
    special.show = *
    menu.elements {
      menu_pages {
        title = LLL:EXT:site_t3demo/Resources/Private/Language/locallang_db.xlf:CType.menu_pages.name
        description = LLL:EXT:site_t3demo/Resources/Private/Language/locallang_db.xlf:CType.menu_pages.description
      }
      menu_subpages {
        title = LLL:EXT:site_t3demo/Resources/Private/Language/locallang_db.xlf:CType.menu_subpages.name
        description = LLL:EXT:site_t3demo/Resources/Private/Language/locallang_db.xlf:CType.menu_subpages.description
      }
    }
  }
  # remove the column view of the backend
  web_layout.menu.functions.1 = 0
}

TCEMAIN {
  # page tree permissions
  permissions {
    user = show,edit,delete,new,editcontent
    group = show,edit,delete,new,editcontent
    everybody = show

    userid = 1
    groupid = 1
  }
  # remove "Translate to:" Prefix
  translateToMessage >

  table {
    pages.disablePrependAtCopy = 1
    tt_content.disablePrependAtCopy = 1
  }
}

# clear cache for faqs when editing something in the faq sys folder
[page["uid"] == 36]
TCEMAIN.clearCacheCmd = cacheTag:faq
[end]
